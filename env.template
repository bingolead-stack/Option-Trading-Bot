# TastyTrade API Configuration (OAuth)
# Get your OAuth credentials at: https://developer.tastytrade.com/
# You need to create an OAuth application to get client_secret and refresh_token
TASTY_CLIENT_SECRET=your_oauth_client_secret
TASTY_REFRESH_TOKEN=your_oauth_refresh_token
TASTY_ACCOUNT_NUMBER=your_account_number

# Trading Mode
# Set to 'true' for paper trading (certification environment)
# Set to 'false' for live trading (production environment)
PAPER_TRADING=true

# Trading Configuration
MAX_POSITIONS_PER_TICKER=2
CAPITAL_PER_TRADE=500
DEFAULT_THRESHOLD=0.5

# Server Configuration
PORT=5000
DEBUG=true
# Comma-separated list of allowed origins for CORS
CORS_ORIGINS=http://localhost:3000,https://option-trading-bot.vercel.app,https://optionbotapi.duckdns.org

# Database Configuration
DATABASE_PATH=backend/data/trading_bot.db

# Logging Configuration
LOG_LEVEL=DEBUG
LOG_PATH=backend/data/logs

# Risk Management
MAX_DAILY_LOSS=2000
MAX_TOTAL_POSITIONS=10

# Options Selection
# 0 DTE means options expiring today, 7 means up to 7 days out
DAYS_TO_EXPIRATION_MIN=0
DAYS_TO_EXPIRATION_MAX=7

